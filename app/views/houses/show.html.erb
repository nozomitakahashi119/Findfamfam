<div class="card">
  <ul>
    <li>募集件名：<%= @house.title %></li>
    <li>市区町村、最寄駅：<%= @house.place %></li>
    <li>物件の間取り：<%= @house.room_size %></li>
    <li>１人あたりの賃料：<%= @house.rent %></li>
    <li>性別の制限：<%= @house.gender %></li>
    <li>その他特記事項：<%= @house.special_notes %></li>
  </ul>
</div>
<br>

<div class="row">
  <ul>
    <li>
      <% if @house.user != current_user %>
        <%= render 'shares/request_button', house: @house %>
      <% else %>
        <%= render 'shares/request_users', house: @house %>
      <% end %>
    </li>
  </ul>
  <div>
    <% if @house.user != current_user %>
      <%= render 'favorites/like_button', house: @house %>
    <% end %>
  </div>
</div>